@page "/Roles"
@model Web.Pages.Admin.Roles.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ادمین سایت | مدیریت نقش ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel-body">
    <div class="table-responsive">
        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

            <div class="col-md-12" style="margin:10px 0;">
                <a asp-page="/CreateRole" class="btn btn-outline btn-success">افزودن نقش جدید</a>
            </div>
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>نام نقش</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.rolelist)
                    {
                        <tr>
                            <td>@role.RoleTitle</td>    
                            <td>
                                <a asp-page="/EditRole/@role.RoleId" class="btn btn-outline btn-warning btn-sm">
                                    ویرایش
                                </a>
                                <a asp-page="/DeleteRole/@role.RoleId" class="btn btn-outline btn-danger btn-sm">
                                    حذف
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
